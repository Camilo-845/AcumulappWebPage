---
var BASE_URL = import.meta.env.BASE_URL ;
if(BASE_URL != '/'){
  BASE_URL += '/';
}

const plans = [
  {
    name: "Gratis",
    price: 0,
    description: "Perfecto para dar tus primeros pasos y probar la plataforma.",
    features: [
      "1 Tarjeta de fidelización",
      "Hasta 20 clientes activos",
      "Gestión con código QR",
      "Soporte por email y formulario",
    ],
    cta: "Empezar Gratis",
    popular: false,
    color: "primary",
    href: `${BASE_URL}download`

  },
  {
    name: "Pro",
    price: 30000,
    description: "Ideal para negocios que quieren crecer y fidelizar sin límites.",
    features: [
      "Tarjetas de fidelización ilimitadas",
      "Clientes activos ilimitados",
      "Acceso a analíticas del negocio",
      "Soporte prioritario por WhatsApp",
      "Todas las funciones del plan Gratis",
    ],
    cta: "Elegir Plan Pro",
    popular: true,
    color: "secondary",
    href: `${BASE_URL}contact`
  }
];
---

<section id="pricing" class="section bg-gray-50 dark:bg-gray-800/50">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-accent-100 dark:bg-accent-900 text-accent-600 dark:text-accent-300 font-medium text-sm mb-4">
        Planes y Precios
      </span>
    </div>
    
    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      {plans.map((plan, index) => (
        <div 
          class={`card p-8 border ${plan.popular ? `border-secondary-500 dark:border-secondary-400` : 'border-gray-200 dark:border-gray-700'} slide-up relative`}
          style={`animation-delay: ${index * 150}ms`}
        >
          {plan.popular && (
            <div class={`absolute top-10 right-4 -translate-y-1/2 bg-secondary-500 text-white px-4 py-1 text-sm font-medium rounded-full`}>
              Más Popular
            </div>
          )}
          
          <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{plan.name}</h3>
          <div class="mb-4">
            <span class="text-4xl font-bold text-gray-900 dark:text-white">${plan.price.toLocaleString('es-CO')}</span>
            <span class="text-gray-500 dark:text-gray-400">/mes</span>
            {plan.price > 0 && (
              <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                (Equivale a ${(plan.price / 30).toLocaleString('es-CO', { minimumFractionDigits: 0, maximumFractionDigits: 0 })} COP por día)
              </p>
            )}
          </div>
          <p class="text-gray-600 dark:text-gray-300 mb-6 h-12">{plan.description}</p>
          
          <ul class="space-y-3 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-start">
                <svg class={`w-5 h-5 text-${plan.color}-500 mr-2 shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-gray-600 dark:text-gray-300">{feature}</span>
              </li>
            ))}
          </ul>
          
          <a 
            href={plan.href} 
            class={`w-full btn ${plan.popular ? `bg-secondary-600 hover:bg-secondary-700 text-white focus:ring-secondary-500` : 'btn-outline'}`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
    
    <div class="mt-12 text-center">
      <p class="text-gray-600 dark:text-gray-300 mb-2">¿Buscas un descuento? Ofrecemos un precio especial en pagos anuales.</p>
      <a href=`${BASE_URL}contact` class="text-primary-600 dark:text-primary-400 font-medium hover:underline">Contáctanos para más información</a>
    </div>
  </div>
</section>
